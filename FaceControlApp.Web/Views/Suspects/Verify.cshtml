@model FaceControlApp.Domain.Entities.Suspect

@{
    ViewData["Title"] = "Verify";
}
<style>
    .suspect-face-image {
        margin-bottom: 16px;
    }
</style>

<h1>Verify</h1>

<h4>Suspect</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Verify">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <img src="data:image/jpg;base64,@Model.FaceImage" width="600" class="suspect-face-image">
                <input class="form-control" placeholder="Enter person name here" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
